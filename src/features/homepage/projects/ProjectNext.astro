---
import OverText from "@/components/ui/Buttons/OverText/OverText.astro";
import projectData from "@/data/projectData";
import ProjectCard from "./ProjectCard.astro";
---

<section
  id="projects"
  class="sections-container grid grid-cols-1 gap-4 py-32 md:gap-x-6 lg:grid-cols-2 xl:gap-x-10 xl:gap-y-8 2xl:gap-10"
>
  <div class="px-4 py-8">
    <h2
      class={` font-boldonse text-2xl font-extrabold 2xl:text-3xl text-main-yellow`}
    >
      All Creative Works
    </h2>
    <p
      class={`mb-6 text-xl text-gray-300 2xl:text-2xl font-primary font-medium`}
    >
      {"Here's"} some of my projects that I have worked on.
    </p>
    <a href={"projects"} class="cursor-pointer">
      <OverText className="mt-5 !cursor-pointer" text="Explore_More" />
    </a>
  </div>

  {
    projectData.slice(0, 3).map((value, index) => {
      return (
        <ProjectCard
          ProjectImage={value.ProjectImage}
          id={index}
          name={value.name}
          gitHubLink={value.gitHubLink}
          liveLink={value.liveLink}
          tag={value.tag}
          description={value.description}
          isTranslate={true}
        />
      );
    })
  }
</section>
